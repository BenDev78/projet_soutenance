{% extends 'base.html.twig' %}
{% set current_page = "detail_reviews" %}
{% block title %}
    Mon profil
{% endblock %}

{% block body %}
    <h3 class="text-center"> Mes commentaires <strong class="text-muted"><em></em></strong></h3>
    <div class="container">
        <hr class="mb-5">
        <div class="row">
            {% include 'components/_user_nav.html.twig' %}
            <div class="col-md-7">
                <div class="row">
                    <div class="card">
                        <table class="table-borderless text-center">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Date</th>
                                <th>Commentaire</th>
                                <th>Note</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for review in app.user.reviews %}
                                <tr class="text-secondary">
                                    <td>{{ review.id }}</td>
                                    <td>{{ review.createdAt | date('d/m/y H:m:s')}}</td>
                                    <td>{{ review.comment }}</td>
                                    <td>
                                        <div>
                                            <span><i class="fas fa-star{{ review.rating > 0 ? ' action-2' : '' }}"></i></span>
                                            <span><i class="fas fa-star{{ review.rating > 1 ? ' action-2' : '' }}"></i></span>
                                            <span><i class="fas fa-star{{ review.rating > 2 ? ' action-2' : '' }}"></i></span>
                                            <span><i class="fas fa-star{{ review.rating > 3 ? ' action-2' : '' }}"></i></span>
                                            <span><i class="fas fa-star{{ review.rating > 4 ? ' action-2' : '' }}"></i></span>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



