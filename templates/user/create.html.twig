{% extends 'base.html.twig' %}
{% set current_page = "user" %}
{% block title %}
    S'inscrire
{% endblock %}
{% block body %}

    <section class="bg-light form_2">
        <div class="container px-xl-0">
            <div class="row justify-content-center text-center text-md-left">
                <div class="col-lg-5 col-md-6 col-sm-10">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <h2 class="mb-45 small">
                            Créer votre compte !
                        </h2>
                        <div>
                            <div class="mb-10 f-14 semibold text-uppercase sp-20">
                                {{ form_label(form.lastname, 'Votre Nom') }}
                            </div>
                                {{ form_errors(form.lastname) }}
                                {{ form_widget(form.lastname) }}
                                {{ form_help(form.lastname) }}
                            </div>
                        <div>
                            <div class="mb-10 f-14 semibold text-uppercase sp-20">
                                {{ form_label(form.email, 'Votre mail') }}
                            </div>
                                {{ form_errors(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_help(form.email) }}
                            </div>
                        <div>
                            <div class="mb-10 f-14 semibold text-uppercase sp-20">
                            </div>
                                {{ form_errors(form.password) }}
                                {{ form_widget(form.password) }}
                                {{ form_help(form.password) }}
                            <small><i>Votre mot de passe doit contenir au moins une majuscule, un chiffre et un caractère spécial</i></small>
                        </div>
                        <div class="mt-25 d-flex flex-wrap align-items-center buttons">
                            <button class="btn mr-20 mb-20 mb-xl-0 w-210 lg action-2">
                                S'inscrire
                            </button>
                            <div class="color-heading text-adaptive"><br>
                                <i>En cliquant, vous acceptez nos termes de politique et d'utilisation de notre site</i>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div><!--<div class="col-lg-5 col-md-6 col-sm-10"> -->
                <div class="col-sm-1">
                </div>
                <div class="col-lg-6 col-md-5 d-none d-md-block overflow-hidden img_holder">
                    <img src="{{ 'uploads/images/pexels-markus-winkler-5349246.jpg' }}" alt="" class="h-full absolute img-fluid" srcset="">
                </div>
            </div><!--<div class="row justify-content-center text-center text-md-left"> -->
        </div> <!--<div class="container px-xl-0"> -->
    </section> <!--<section class="bg-light form_2"> -->
{% endblock %}
