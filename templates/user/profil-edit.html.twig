{% extends 'base.html.twig' %}
{% set current_page = "edit-profil" %}
{% block title %}
    Mon profil
{% endblock %}
{% block body %}
    <section class="bg-light form_2">
        <div class="container px-xl-0">
            <div class="row justify-content-center text-center text-md-left">
                <div class="col-lg-5 col-md-6 col-sm-10 mb-3">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'autocomplete' : 'off'}}) }}
                    <h2 class="mb-45 small">
                        Mes informations
                    </h2>
                    {% for label, messages in app.flashes(['success', 'warning']) %}
                        {% for message in messages %}
                            <div class="flash-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <p class="pl-4"><a href="{{ path('default_profile') }}" class="link action-2">Retour à mon profil</a></p>
                    <div id="disabledTextInput">
                        <div class="mb-10 f-14 semibold text-uppercase sp-20">
                            {{ form_label(form.lastname, 'Votre Nom') }}
                        </div>
                        {{ form_errors(form.lastname) }}
                        {{ form_widget(form.lastname) }}
                        {{ form_help(form.lastname) }}
                    </div>
                    <br>
                    <div>
                        <div class="mb-10 f-14 semibold text-uppercase sp-20">
                            {{ form_label(form.firstname, 'Votre prénom') }}
                        </div>
                        {{ form_errors(form.firstname) }}
                        {{ form_widget(form.firstname) }}
                        {{ form_help(form.firstname) }}
                    </div>
                    <br>
                    <div>
                        <div class="mb-10 f-14 semibold text-uppercase sp-20">
                            {{ form_label(form.email, 'Votre mail') }}
                        </div>
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email) }}
                        {{ form_help(form.email) }}
                    </div>
                    <br>
                    <div>
                        <div class="mb-10 f-14 semibold text-uppercase sp-20">
                            {{ form_label(form.phone, 'Votre téléphone') }}
                        </div>
                        {{ form_errors(form.phone) }}
                        {{ form_widget(form.phone) }}
                        {{ form_help(form.phone) }}
                    </div>
                    <br>
                    <div>
                        <div class="mb-10 f-14 semibold text-uppercase sp-20">
                            {{ form_label(form.old_password, 'Votre mot de passe actuel') }}
                        </div>
                        {{ form_errors(form.old_password) }}
                        {{ form_widget(form.old_password) }}
                        {{ form_help(form.old_password) }}
                    </div>
                    <br>
                    <div>
                        {{ form_errors(form.new_password) }}
                        {{ form_widget(form.new_password) }}
                        {{ form_help(form.new_password) }}
                    </div>
                    <br>
                    <div class="mt-25 d-flex flex-wrap align-items-center buttons">
                        <button class="btn mr-20 mb-20 mb-xl-0 w-210 lg action-2">
                            Enregistrer
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
                <div class="col-sm-1">
                </div>
                <div class="col-lg-6 col-md-5 d-none d-md-block overflow-hidden img_holder">
                    <img src="{{ asset('uploads/images/pexels-markus-winkler-5349246.jpg') }}" alt="" class="h-full absolute img-fluid" srcset="">
                </div>
            </div>
        </div>
    </section>
{% endblock %}

