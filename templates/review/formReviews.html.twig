{% extends "base.html.twig" %}
{% set current_page = 'review' %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container-fluid col-8">
        <h2 class="text-center mb-45 small">DONNEZ VOTRE AVIS</h2>

    {# Nom du produit #}

        {{ form_start(form) }}

        <div class="mb-10 f-14 semibold text-uppercase sp-20">
            {{ form_row(form.rating) }}
        </div>

        <div class="mb-10 f-14 semibold text-uppercase sp-20">
            {{ form_row(form.comment) }}
        </div>

        <div class="mb-10 f-14 semibold text-uppercase sp-20">
            {{ form_row(form.pseudo) }}
        </div>

        <div class="col text-center">
            <button class="btn mr-20 mb-20 mb-xl-0 w-210 lg action-2 text-center">Envoyer</button>
        </div>
            {{ form_end(form) }}

    </div>
{% endblock %}