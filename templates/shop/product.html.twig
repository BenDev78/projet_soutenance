{% extends 'base.html.twig' %}
{% set current_page = 'shop' %}

{% block title %}Cognac Guy Bonnaud{% endblock %}

{% block body %}
    <section class="pt-100 pb-100 bg-light ecommerce_31">
        {% for product in products|slice(0,1) %}
            <div class="container px-xl-0">
                <div class="row flex-column flex-lg-row align-items-center align-items-xl-start">
                    <div class="mb-30 mb-lg-0 col-lg-5 col-md-8 col-sm-10 order-0 order-lg-0">
                        <img src="{{ asset('uploads/images/'~product.image) }}" alt="" class="img-fluid radius10">
                    </div>
                    <div class="col-lg-1">
                    </div>
                    <div class="mt-30 mt-lg-0 col-xl-4 col-lg-5 col-md-8 col-sm-10 order-2 order-lg-0">
                        <h2 class="mb-10 f-36">
                            {{ product.name }}
                        </h2>
                        <div class="mb-25 f-18 medium price action-2">
                            {{ product.price|number_format(2,',') }} â‚¬
                        </div>
                        <div class="mw-520 color-heading text-adaptive">
                            {{ product.description }}
                        </div>
                        <form action="form-handler.php" method="POST">
                            <div class="mt-20 quantity">
                                <div class="mb-1 f-14 semibold text-uppercase sp-20 label action-1">
                                    Quantity
                                </div>
                                <div class="h-40 d-flex align-items-stretch radius20 text-center quantity_selector">
                                    <a class="link h-full color-heading control less">
                                        -
                                    </a>
                                    <input name="quantity" value="1" min="1" max="9999" class="input noradius p-0 text-center">
                                    <a class="link h-full color-heading control greater">
                                        +
                                    </a>
                                </div>
                            </div>

                            <ul class="mt-35 mb-0 px-0 color-heading advantages">
                                <li class="mb-10">
                                    Ultra high rise with a trendy wide leg
                                </li>
                                <li class="mb-10">
                                    Cotton 80%, Polyester 18%, Elastane 2%
                                </li>
                                <li class="mb-10">
                                    Mid-stretch denim
                                </li>
                            </ul>
                            <div class="mt-40 d-flex flex-wrap align-items-center buttons">
                                <button class="btn mr-20 sm action-2 medium f-16">
                                    Add to Cart
                                </button>
                                <a href="#" class="link action-2 medium">
                                    Add to Wish List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}