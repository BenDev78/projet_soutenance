{% extends 'base.html.twig' %}
{% set current_page = 'shop' %}

{% block title %}Cognac Guy Bonnaud{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for label, messages in app.flashes(['success', 'warning']) %}
                {% for message in messages %}
                    <div class="text-center alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    <section class="pt-100 pb-100 bg-light ecommerce_31">
        <div class="container px-xl-0">
            <div class="row flex-column flex-lg-row align-items-center align-items-xl-start">
                <div class="mb-30 mb-lg-0 col-lg-5 col-md-8 col-sm-10 order-0 order-lg-0">
                    <img src="{{ asset('uploads/images/'~product.image) }}" alt="" class="img-fluid radius10">
                    <ul class="mt-35 mb-0 px-0 color-heading advantages">
                        <li class="mb-10">
                            {{ product.quantity }} cl
                        </li>
                        <li class="mb-10">
                            Année {{ product.year }}
                        </li>
                        <li class="mb-10">
                            Mid-stretch denim
                        </li>
                    </ul>
                </div>
                <div class="col-lg-1">
                </div>
                <div class="mt-30 mt-lg-0 col-xl-6 col-lg-5 col-md-10 col-sm-10 order-2 order-lg-0">
                    <h2 class="mb-10 f-36">
                        {{ product.name }}
                    </h2>

                    <div class="mb-25 f-24 medium price action-2">
                        {{ product.price|number_format(2,',') }} €
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="rating">
                                <span><i class="fas fa-star{{ review.rating > 0 ? ' action-2' : '' }}"></i></span>
                                <span><i class="fas fa-star{{ review.rating > 1 ? ' action-2' : '' }}"></i></span>
                                <span><i class="fas fa-star{{ review.rating > 2 ? ' action-2' : '' }}"></i></span>
                                <span><i class="fas fa-star{{ review.rating > 3 ? ' action-2' : '' }}"></i></span>
                                <span><i class="fas fa-star{{ review.rating > 4 ? ' action-2' : '' }}"></i></span>
                            </div>
                        </div>
                        <div>
                            <a href="{{ path('all_product_reviews', {'id' : product.id}) }}">Voir les avis</a>
                        </div>

                    </div>

                    <div class="mw-520 color-heading text-adaptive">
                        {{ product.description }}
                    </div>
                    <div class="mt-20 quantity">
                        <div class="mb-1 f-14 semibold text-uppercase sp-20 label action-1">
                            Quantity
                        </div>
                        <div class="number-input md-number-input">
                            <i class="fas fa-minus minus"></i>
                            <span class="quantity_input">1</span>
                            <i class="fas fa-plus plus"></i>
                        </div>
                    </div>
                    <div class="mt-20 d-flex">
                        <div class="buttons">
                            <a href="{{ path('product_review', {'id' : product.id}) }}" class="btn mt-40 mr-20 sm action-2 medium f-16">
                                Laisser un avis
                            </a>
                        </div>
                        <div class="buttons">
                            <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn mt-40 mr-20 sm action-1 medium f-16">
                                Ajouter au panier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="pt-80 pb-80 bg-dark color-white testimonial_1">
        {% for review in product.reviews %}
            <div class="container px-xl-0">
                <div class="row justify-content-center">
                    <div class="col-xl-10 col-lg-11">
                        <div class="hr bg-gray h-2">
                        </div>
                    </div>
                </div>
                <div class="row pt-30 pb-50 inner">
                    <div class="col-xl-2 col-lg-1">
                    </div>
                    <div class="col-md-1 col-sm-2">
                        <i class="fas fa-quote-left f-36 color-gray">
                        </i>
                    </div>
                    <div class="col-xl-7 col-lg-8 col-sm-10">
                        <div class="pt-10 f-22 text-adaptive">
                            {{ review.comment }}
                        </div>
                        <div class="mt-20 d-flex align-items-center author_info">
                            <img src="i/testimonial_1_img.jpg" alt="" class="radius_full">
                            <div class="ml-15 f-14 semibold text-uppercase sp-20">
                                {{ review.pseudo }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-xl-10 col-lg-11">
                        <div class="hr bg-gray h-2">
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}


