{% extends 'base.html.twig' %}
{% set current_page = 'shop' %}

{% block title %}Cognac Guy Bonnaud{% endblock %}

{% block body %}
    <section class="pt-100 pb-100 bg-light ecommerce_31">
        {% for product in products|slice(0,1) %}
            <div class="container px-xl-0">
                <div class="row flex-column flex-lg-row align-items-center align-items-xl-start">
                    <div class="mb-30 mb-lg-0 col-lg-5 col-md-8 col-sm-10 order-0 order-lg-0">
                        <img src="{{ asset('uploads/images/'~product.image) }}" alt="" class="img-fluid radius10">
                        <ul class="mt-35 mb-0 px-0 color-heading advantages">
                            <li class="mb-10">
                                {{ product.quantity }} cl
                            </li>
                            <li class="mb-10">
                                Année {{ product.year }}
                            </li>
                            <li class="mb-10">
                                Mid-stretch denim
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-1">
                    </div>
                    <div class="mt-30 mt-lg-0 col-xl-6 col-lg-5 col-md-10 col-sm-10 order-2 order-lg-0">
                        <h2 class="mb-10 f-36">
                            {{ product.name }}
                        </h2>
                        <div class="mb-25 f-24 medium price action-2">
                            {{ product.price|number_format(2,',') }} €
                        </div>
                        <div class="mw-520 color-heading text-adaptive">
                            {{ product.description }}
                        </div>
                            <div class="mt-20 d-inline-block quantity">
                                <div class="mb-1 f-14 semibold text-uppercase sp-20 label action-2">
                                    Quantity
                                </div>
                                <div class="h-40 d-flex align-items-stretch radius20 text-center quantity_selector">
                                    <a class="link h-full color-heading control less">
                                        -
                                    </a>
                                    <input name="quantity" value="1" min="1" max="9999" class="input noradius p-0 text-center">
                                    <a class="link h-full color-heading control greater">
                                        +
                                    </a>
                                </div>
                            </div>
                            <div class="mt-40 d-flex buttons">
                                <button class="btn mr-20 sm action-1 medium f-16">
                                    Ajouter au panier
                                </button>

                                <a href="/review/{id}" class="btn mr-20 sm action-2 medium f-16">
                                    Laisser un avis
                                </a>
                            </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
    <section class="pt-80 pb-80 bg-light testimonial_1">
        {% for review in reviews %}
        <div class="container px-xl-0">
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-11">
                    <div class="hr bg-gray h-2">
                    </div>
                </div>
            </div>
            <div class="row pt-30 pb-50 inner" >
                <div class="col-xl-2 col-lg-1">
                </div>
                <div class="col-md-1 col-sm-2">
                    <i class="fas fa-quote-left f-36 color-gray">
                    </i>
                </div>
                <div class="col-xl-7 col-lg-8 col-sm-10">
                    <div class="pt-10 f-22 text-adaptive">
                        {{ review.comment }}
                    </div>
                    <div class="mt-20 d-flex align-items-center author_info">
                        <img src="i/testimonial_1_img.jpg" srcset="i/testimonial_1_img@2x.jpg 2x" alt="" class="w-60 h-60 radius_full">
                        <div class="ml-15 color-heading f-14 semibold text-uppercase sp-20">
                            {{ review.pseudo }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-11">
                    <div class="hr bg-gray h-2">
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
{% endblock %}